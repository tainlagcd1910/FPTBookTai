@model IEnumerable<FPTBook.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
     
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
        
            <th scope="col">Status</th>

       
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a asp-controller="CategoriesAdmin" asp-action="ChangeActiveCategory" asp-route-id="@item.Id" 
                    class="btn btn-info">Active</a>
                    <a asp-controller="CategoriesAdmin" asp-action="ChangeActiveCategory1" asp-route-id="@item.Id"
                   class="btn btn-info">Refuse</a>
                    <a asp-controller="CategoriesAdmin" asp-action="Delete" asp-route-id=@item.Id class="btn btn-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>